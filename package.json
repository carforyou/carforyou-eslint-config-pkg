{
  "name": "@carforyou/eslint-rules",
  "version": "0.0.0",
  "description": "ESLint rules that we use at CAR FOR YOU",
  "scripts": {
    "version": "npm run build",
    "build": "pika build",
    "lint": "tslint --project tsconfig.lint.json",
    "format": "tslint --project tsconfig.lint.json --fix",
    "typecheck": "tsc --noEmit",
    "test:unit": "jest",
    "test:debug": "node --inspect-brk --inspect=127.0.0.1:9229 ./node_modules/jest/bin/jest.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carforyou/carforyou-example-pkg.git"
  },
  "author": "CAR FOR YOU",
  "license": "MIT",
  "homepage": "https://github.com/carforyou/example-pkg#readme",
  "devDependencies": {
    "@carforyou/tslint-rules": "^3.0.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "jest": "^25.5.4",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.7",
    "ts-jest": "^25.5.1",
    "tslint": "^5.20.1",
    "typescript": "^3.9.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "tsconfig.pika.json"
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  }
}
